{
  "name": "django-ecommerce",
  "version": "1.0.0",
  "description": "Django ecommerce project with Tailwind CSS and hot reload",
  "scripts": {
    "dev": "concurrently \"npm run watch-css\" \"python src/manage.py runserver\"",
    "watch-css": "tailwindcss -i ./src/assets/input.css -o ./src/static/css/output.css --watch",
    "build-css": "tailwindcss -i ./src/assets/input.css -o ./src/static/css/output.css",
    "build-css-prod": "tailwindcss -i ./src/assets/input.css -o ./src/static/css/output.css --minify"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.0",
    "concurrently": "^8.2.2"
  }
}